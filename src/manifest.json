{
    "manifest_version": 3,
    "name": "alike03's Subscription Info on Steam",
    "description": "See on Steam if the game is currently available on any Subscription package like Xbox Game Pass PC & Console, Ubisoft+ or EA Play",
    "version": "{{version}}",
    "homepage_url": "https://aligueler.com/SubscriptionInfo/",
    "permissions": [
        "activeTab",
        "cookies",
        "notifications",
        "storage"
    ],
    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "96": "icon/96.png",
        "128": "icon/128.png"
    },
    "background": {
        "{{firefox}}.scripts": [ "src/page/background.ts" ],
        "{{chrome}}.service_worker": "src/page/background.ts"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "alike_sub_info@aligueler.com"
        }
    },
    "action": {
        "default_title": "alike03's Subscription Info",
        "default_popup": "src/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://store.steampowered.com/*"
            ],
            "js": [
                "src/page/page.ts"
            ],
            "run_at": "document_start"
        }
    ],
    "host_permissions": [
        "https://aligueler.com/"
    ]
}