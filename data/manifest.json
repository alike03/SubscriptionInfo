{
    "manifest_version": 2,
    "name": "Xbox Game Pass info on Steam",
    "description": "See on Steam Store Page if the game is currently available on Xbox Game Pass",
    "version": "1.0.3",
    "homepage_url": "https://aligueler.com/GamePass/",
    "permissions": [
        "https://aligueler.com/"
    ],
    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },
    "content_scripts": [{
        "matches": ["*://store.steampowered.com/*"],
        "js": ["alike_gp_main.js", "alike_gp_ajax.js", "alike_gp_info.js"],
        "css": ["alike_gp_style.css"],
        "run_at": "document_start"
    }]    
}